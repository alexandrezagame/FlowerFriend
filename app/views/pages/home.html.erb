 <div id="carouselExampleControls" class="carousel slide my-3" data-ride="carousel">
           <div class="carousel-inner">
              <% @flowers.each do |flower| %>
              <% if flower == @flowers.first %>
             <div class="carousel-item active">
               <% else %>
             <div class="carousel-item">
               <% end %>
              <%= link_to flower_path(flower) do %>
              <div class="card-product-infos">
                  <% if flower.picture.attached? %>
                  <div class="card-product carousel-card" id="img" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%=  cl_image_path flower.picture.key %>');">
                      <% else %>
                      <div class="card-product carousel-card" id="img" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('https://source.unsplash.com/featured/?flower, <%= flower.name %>');">
                          <% end %>
                          <h5>
                              <%= flower.name %>
                          </h5>
                          <p>
                              <%= flower.species %>
                          </p>
                          <br>
                      </div>
                     </div>
                  <% end %>
              </div>
             <% end %>
         </div>
         <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
           <span class="carousel-control-prev-icon" aria-hidden="true"></span>
           <span class="sr-only">Previous</span>
         </a>
         <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
           <span class="carousel-control-next-icon" aria-hidden="true"></span>
           <span class="sr-only">Next</span>
         </a>
</div>
