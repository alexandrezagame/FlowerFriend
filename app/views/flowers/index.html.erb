<%= render 'shared/banner'%>
<div class="wrapper">
    <div class="card-container">
        <div class="text-container">
          <form action="/flowers" method="GET">
            <input type="text" name="query" id="query" placeholder="Search flowerâ€¦">
            <input type="submit" name="commit" value="Search">
          </form>
        </div>
        <div class="cards">
            <% @flowers.each do |flower| %>
            <%= link_to flower_path(flower) do %>
            <div class="card-product-infos">
                <% if flower.picture.attached? %>
                <div class="card-product" id="img" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('<%=  cl_image_path flower.picture.key %>');">
                    <% else %>
                    <div class="card-product" id="img" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url('https://source.unsplash.com/featured/?flower, <%= flower.name %>');">
                        <% end %>
                        <h5>
                            <%= flower.name %>
                        </h5>
                        <p>
                            <%= flower.species %>
                        </p>
                        <br>
                    </div>
                <% end %>
            </div>
            <% end %>
           <div class="mapcontainer">
            <%= render 'shared/map'%>
        </div>
        </div>
        <br>
    </div>
    </div>
    </div>
