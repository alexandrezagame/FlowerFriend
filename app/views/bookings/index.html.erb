<!-- bookings -->
<div class="row justify-content-center">
    <div class="card-product-show">
        <div class="card-product-infos">
            <% @bookings.each do |booking| %>
            <div class="card-product-infos">
                <ul>
                    <h5>
                        <li>
                            Pick up date: <%= booking.created_at.strftime("%A %b %d, %Y") %> |
                            <%= booking.flower.name %> |
                            <%= booking.user.email %>
                        </li>
                    </h5>
                </ul>
            </div>
            <% end %>
        </div>
    </div>
</div>
<br>
<div class="row justify-content-center">
    <%= link_to 'back to flower shop', flowers_path, class: "btn btn-outline-light form-button" %>
</div>
